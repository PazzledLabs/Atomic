<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:keepScreenOn="true"
    android:id="@+id/game_menu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/white"
    android:orientation="vertical"
    android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >

        
    <include 
        android:layout_gravity="right"
        layout="@layout/app_like"/>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <!-- <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="matrix"
            android:contentDescription="@string/empty"
            android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
            android:src="@drawable/puzzle" />
 		-->
        <RelativeLayout
            android:id="@+id/menu_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/menu_black_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/empty"
                android:src="@drawable/bar" />

            <ImageView
                android:id="@+id/company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:contentDescription="@string/empty"
                android:src="@drawable/atomic" />

            <TextView
                android:id="@+id/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="-5"
                android:shadowDy="-5"
                android:shadowRadius="2"
                android:text="@string/app_name"
                android:textColor="@color/red"
                android:textSize="50sp"
                android:typeface="serif" />
        </RelativeLayout>

        <TableLayout
            android:id="@+id/menu_actions"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/menu_header" >

            <TableRow
                android:gravity="left"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/menu_item1"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:background="@drawable/shelf"
                    android:ems="10"
                    android:text="@string/Play"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:typeface="serif"
                    android:visibility="invisible" />
            </TableRow>

            <TableRow
                android:gravity="left"
                android:paddingTop="15dp" >

                <TextView
                    android:id="@+id/menu_item2"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:background="@drawable/shelf"
                    android:ems="10"
                    android:text="@string/menu_Levels"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:typeface="serif"
                    android:visibility="invisible" />
            </TableRow>
            
            <TableRow
                android:gravity="left"
                android:paddingTop="15dp" >

                <TextView
                    android:id="@+id/menu_item3"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:background="@drawable/shelf"
                    android:ems="10"
                    android:text="@string/leaderboard"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:typeface="serif"
                    android:visibility="invisible" />
            </TableRow>
            
            <TableRow
                android:gravity="left"
                android:paddingTop="15dp" >

                <TextView
                    android:id="@+id/menu_item4"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:background="@drawable/shelf"
                    android:ems="10"
                    android:text="@string/Tutorial"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:typeface="serif"
                    android:visibility="invisible" />
            </TableRow>

            <TableRow
                android:gravity="left"
                android:paddingTop="15dp" >

                <TextView
                    android:id="@+id/menu_item5"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:background="@drawable/shelf"
                    android:ems="10"
                    android:text="@string/about"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:typeface="serif"
                    android:visibility="invisible" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>

</LinearLayout>
